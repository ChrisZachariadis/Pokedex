<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Header Title -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_pokemons_in_firestore"
        android:textSize="24sp"
        android:textColor="#3E4A89"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Image Placeholder -->
    <ImageView
        android:id="@+id/imagePlaceholder"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/snorlax_image_placeholder" />

    <!-- Download Button -->
    <Button
        android:id="@+id/buttonDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_all_pokemons"
        android:textSize="16sp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- Delete Button -->
    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_all_pokemons"
        android:textSize="16sp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
