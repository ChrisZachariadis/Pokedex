<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewPokemonItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/linearLayoutPokemonItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Pokémon Front Image -->
        <ImageView
            android:id="@+id/imageViewPokemonFront"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:id="@+id/linearLayoutPokemonInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pokémon Name -->
            <TextView
                android:id="@+id/textViewPokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Pokémon Type -->
            <TextView
                android:id="@+id/textViewPokemonType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
